{
  "manifest_version": 3,
  "name": "Chalamandra Context Intelligence",
  "version": "1.0.0",
  "description": "Real-time multidimensional context analysis using Chrome Built-in AI",
  "permissions": ["activeTab", "storage"],
  "host_permissions": [],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Analyze communication context"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "run_at": "document_idle"
  }],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "minimum_chrome_version": "121"
}
