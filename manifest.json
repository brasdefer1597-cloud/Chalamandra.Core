{
  "manifest_version": 3,
  "name": "Chalamandra Context Analyzer",
  "version": "1.0.0",
  "description": "AI-powered context analysis for better communication understanding",
  "permissions": ["activeTab", "storage"],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Analyze communication context"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
